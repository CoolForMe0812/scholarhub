<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">


    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/red"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:text="@string/Scholarhub"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <SearchView
                android:id="@+id/mySearchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerInParent="true"
                android:hint="@string/search"
                android:iconifiedByDefault="false" />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/title1"
        android:layout_marginTop="434dp"
        android:background="@color/grey"></androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:text="What are you selling?"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_below="@+id/title1"
        android:layout_marginLeft="20dp"
        android:hint="Enter title"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#5E868485" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonLoadPicture"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="-30dp"
        android:gravity="left"
        android:text="Images"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1"></ImageView>

    <Button
        android:id="@+id/buttonLoadPicture"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/editText2"

        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="43dp"
        android:layout_weight="0"

        android:gravity="left"
        android:text="Add Images"></Button>

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonLoadPicture"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="-125dp"
        android:gravity="left"
        android:text="Description?"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/text3"
        android:layout_width="225dp"
        android:layout_height="100dp"
        android:layout_below="@+id/title3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:hint="Enter description"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#5E868485" />

    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="30dp"
        android:text="Condition"
        android:textSize="25dp"
        android:textStyle="bold" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/first"
        android:layout_below="@id/text3"
        android:orientation="vertical"
        android:layout_margin="35dp"
        >

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
            android:background="?android:selectableItemBackground"
            android:layoutDirection="rtl"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="New"
            android:textSize="14sp" />
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
            android:background="?android:selectableItemBackground"
            android:layoutDirection="rtl"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="Used"
            android:textSize="14sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title4"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="30dp"
        android:text="Deal Method"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title4"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-40dp"
        >

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/title5"
            android:layout_gravity="start"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="0dp"
            android:background="?android:selectableItemBackground"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="COD"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="start"
            android:background="?android:selectableItemBackground"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Delivery"
            android:textAlignment="textStart"
            android:textSize="14sp" />
    </RadioGroup>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/grey">
    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="86dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="94dp"
        android:clickable="true"
        android:src="@drawable/tick"
        app:backgroundTint="#F70000" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:background="@android:color/white"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/main_menu" />


</RelativeLayout>
